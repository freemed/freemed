    /***********************************************************/
    /* Return the current page
    /***********************************************************/
    function Current()
    {
        $current = $this->MultiPage->get_current_page();
		$content = $this->MultiPage->get_nth_page($current);
        if ($content)
        {
            $tab = $this->MultiPage->get_tab_label($content);
            if ($tab)
            {
                return $tab->get();
            }
        }
        return null;
    }

